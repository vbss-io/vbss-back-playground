{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "outDir": "./build",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}